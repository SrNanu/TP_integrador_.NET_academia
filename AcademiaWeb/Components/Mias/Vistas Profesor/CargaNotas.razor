@page "/cargar-notas"

<h3>Cargar Notas de los Alumnos</h3>

<div class="alumnos-list">
    @if (Alumnos.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Nombre</th>
                    <th>Curso</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var alumno in Alumnos)
                {
                    <tr>
                        <td>@alumno.Nombre</td>
                        <td>@alumno.Curso</td>
                        <td>
                            <input type="text" @bind="alumno.Nota" placeholder="Ingrese la nota" />
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <button class="btn-guardar" @onclick="GuardarNotas">Guardar Notas</button>
    }
    else
    {
        <p>No hay alumnos en este curso.</p>
    }

    @if (!string.IsNullOrEmpty(Message))
    {
        <p class="message">@Message</p>
    }
</div>

@code {
    // Lista de alumnos inscritos en el curso
    public List<Alumno> Alumnos { get; set; } = new List<Alumno>
    {
        new Alumno { Id = 1, Nombre = "Juan Pérez", Curso = "Matemáticas" },
        new Alumno { Id = 2, Nombre = "Ana Gómez", Curso = "Matemáticas" },
        new Alumno { Id = 3, Nombre = "Carlos Díaz", Curso = "Matemáticas" }
    };

    // Modelo para representar la nota ingresada
    public class Alumno
    {
        public int Id { get; set; }
        public string Nombre { get; set; }
        public string Curso { get; set; }
        public string Nota { get; set; } // Nota del alumno
    }

    // Acción para guardar las notas ingresadas
    public void GuardarNotas()
    {
        // Aquí puedes guardar las notas en la base de datos, por ejemplo.
        // Este es un ejemplo simulado de la operación de guardado.
        Message = "Las notas han sido guardadas correctamente.";
    }

    // Mensaje de confirmación después de guardar las notas
    public string Message { get; set; }
}

