@page "/MenuProfesor"

<h2>Menú de Profesor</h2>

<div class="menu-container">
    <button class="menu-button" @onclick="IrPaginaBajaAlumno">Dar de Baja Alumno</button>
    <button class="menu-button" @onclick="IrPaginaCargarNotas">Cargar Notas</button>
    <button class="menu-button" @onclick="IrPaginaAltaCurso">Alta en Curso</button>
    <button class="menu-button" @onclick="IrPaginaVerCursos">Ver Cursos</button>
    <button class="menu-button logout-button" @onclick="CerrarSesion">Cerrar sesión</button>
</div>

@code {
    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    private void IrPaginaBajaAlumno()
    {
        Navigation.NavigateTo("/BajaAlumno");
    }

    private void IrPaginaCargarNotas()
    {
        Navigation.NavigateTo("/CargarNotas");
    }

    private void IrPaginaAltaCurso()
    {
        Navigation.NavigateTo("/AltaCurso");
    }

    private void IrPaginaVerCursos()
    {
        Navigation.NavigateTo("/VerCursos");
    }

    private void CerrarSesion()
    {
        Navigation.NavigateTo("/login", true); // Redirige a la página de login
    }
}

<style>
    /* Estilos generales */
    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .menu-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        max-width: 350px;
        margin: 0 auto;
        padding: 25px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0px 5px 10px rgba(0, 0, 0, 0.1);
        background-color: #f8f9fa;
    }

    /* Estilo de los botones */
    .menu-button {
        width: 100%;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #17a2b8; /* Color principal del botón */
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
    }

    /* Botón de cerrar sesión con color diferente */
    .logout-button {
        background-color: #dc3545;
    }

    /* Efecto hover para los botones */
    .menu-button:hover {
        background-color: #138496;
    }

    .logout-button:hover {
        background-color: #c82333;
    }

    /* Animación para el botón al hacer clic */
    .menu-button:active {
        transform: scale(0.97);
    }
</style>
