@page "/inscribir-curso"

<h3>Inscripción al Curso</h3>

<div class="inscripcion-container">
    <h4>Selecciona un curso al que te gustaría inscribirte:</h4>

    @if (Cursos.Any())
    {
        <select class="form-control" @bind="CursoSeleccionadoId">
            <option value="">-- Seleccione un curso --</option>
            @foreach (var curso in Cursos)
            {
                <option value="@curso.Id">@curso.Nombre</option>
            }
        </select>

        <button class="btn-inscribir" @onclick="InscribirAlCurso" disabled="@(!CursoSeleccionadoId.HasValue)">Inscribirse</button>
    }
    else
    {
        <p>No hay cursos disponibles para inscripción.</p>
    }

    @if (!string.IsNullOrEmpty(MensajeInscripcion))
    {
        <p class="message">@MensajeInscripcion</p>
    }
</div>

@code {
    // Lista de cursos disponibles para inscribirse
    public List<Curso> Cursos { get; set; } = new List<Curso>
    {
        new Curso { Id = 1, Nombre = "Matemáticas" },
        new Curso { Id = 2, Nombre = "Física" },
        new Curso { Id = 3, Nombre = "Química" }
    };

    // Curso seleccionado por el profesor
    public int? CursoSeleccionadoId { get; set; }

    // Acción para inscribir al profesor al curso seleccionado
    public string MensajeInscripcion { get; set; }

    public void InscribirAlCurso()
    {
        if (CursoSeleccionadoId.HasValue)
        {
            // Aquí puedes agregar la lógica para inscribir al profesor en la base de datos
            MensajeInscripcion = $"El profesor ha sido inscrito en el curso '{Cursos.First(c => c.Id == CursoSeleccionadoId.Value).Nombre}'.";
        }
        else
        {
            MensajeInscripcion = "Por favor, seleccione un curso para inscribirse.";
        }
    }

    // Modelo para los cursos
    public class Curso
    {
        public int Id { get; set; }
        public string Nombre { get; set; }
    }
}
    
