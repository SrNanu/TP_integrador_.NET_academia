@page "/VerCursos"

<h3>Cursos en los que estás inscrito</h3>

<div class="cursos-container">
    @if (CursosInscritos.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Profesor</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var curso in CursosInscritos)
                {
                    <tr>
                        <td>@curso.Nombre</td>
                        <td>@curso.Profesor</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>No estás inscrito en ningún curso.</p>
    }
</div>

@code {
    // Lista de cursos a los que el profesor está inscrito (simulada)
    public List<Curso> CursosInscritos { get; set; } = new List<Curso>
    {
        new Curso { Id = 1, Nombre = "Matemáticas", Profesor = "Dr. Pérez" },
        new Curso { Id = 2, Nombre = "Física", Profesor = "Prof. González" },
        new Curso { Id = 3, Nombre = "Química", Profesor = "Lic. Martínez" }
    };

    // Modelo para los cursos
    public class Curso
    {
        public int Id { get; set; }
        public string Nombre { get; set; }
        public string Profesor { get; set; }
    }
}

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h3 {
        text-align: center;
        color: #333;
        margin-top: 20px;
    }

    /* Estilos del contenedor de cursos */
    .cursos-container {
        width: 80%;
        margin: 20px auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border-bottom: 1px solid #ddd;
    }

    th {
        background-color: #4CAF50;
        color: white;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    p {
        text-align: center;
        color: #333;
    }
</style>
