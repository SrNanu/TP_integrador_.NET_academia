@page "/MenuAlumno"
@using Microsoft.AspNetCore.Components.Forms
@inherits LayoutComponentBase
@rendermode InteractiveServer
@inject NavigationManager Navigation

<h2>Menú de Alumno</h2>

<div class="menu-container">
    <button class="menu-button" @onclick="IrPaginaNotas">Ver Notas</button>
    <button class="menu-button" @onclick="IrPaginaInscripcionCursos">Inscripción a materias</button>
    <button class="menu-button" @onclick="IrPaginaCursosInscritos">Materias inscripto</button>
    <button class="menu-button logout-button" @onclick="CerrarSesion">Cerrar sesión</button>
</div>

@code {
    private void CerrarSesion()
    {
        Navigation.NavigateTo("/Login", true);
    }

    private void IrPaginaNotas()
    {
        Navigation.NavigateTo("/Notas");
    }

    private void IrPaginaInscripcionCursos()
    {
        Navigation.NavigateTo("/InscripcionCursos");
    }

    private void IrPaginaCursosInscritos()
    {
        Navigation.NavigateTo("/CursosInscriptosAlumno");
    }
}

<style>
    h2 {
        text-align: center;
        color: #333;
        margin-bottom: 20px;
        font-size: 24px;
    }

    .menu-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        gap: 15px;
        max-width: 300px;
        margin: 0 auto;
        padding: 20px;
        border: 2px solid #e0e0e0;
        border-radius: 10px;
        box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #fafafa;
    }

    .menu-button {
        width: 100%;
        padding: 12px 20px;
        font-size: 16px;
        font-weight: bold;
        color: #fff;
        background-color: #007bff;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

    .logout-button {
        background-color: #dc3545;
    }

    .menu-button:hover {
        background-color: #0056b3;
    }

    .logout-button:hover {
        background-color: #c82333;
    }

    .menu-button:active {
        transform: scale(0.98);
    }
</style>
