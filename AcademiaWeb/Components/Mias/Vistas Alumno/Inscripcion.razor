@page "/InscripcionCursos"
@using AcademiaWeb.Services
@inject Usuario usuarioOnline

@using Microsoft.AspNetCore.Components.Forms
@inherits LayoutComponentBase
@rendermode InteractiveServer

<h3>Inscripción a cursos</h3>

<div class="container">
    <p>Selecciona una materia para inscribirte:</p>

    <select @bind="materiaSeleccionadaId" class="select-box">
        <option value="0" disabled>Elige una materia</option>
        @foreach (var materia in MateriasDisponibles)
        {
            <option value="@materia.Id">@materia.Descripcion</option>
        }
    </select>

    <button class="btn-inscribir" @onclick="Inscribir">Inscribirse</button>

    @if (!string.IsNullOrEmpty(Message))
    {
        <p class="message">@Message</p>
    }

    <NavLink href="/MenuAlumno" class="btn btn-secondary" active-class="active" aria-label="Crear nuevo usuario" style="background-color: red">
        Volver al menú de usuario
    </NavLink>
</div>

@code {
    int materiaSeleccionadaId;
    public Curso_Controller Curso_Controller = new Curso_Controller();

    List<Materia> MateriasDisponibles = (Materia_Controller.GetAllMateria()).ToList();

    public void Inscribir()
    {
        var materiaSeleccionada = Materia_Controller.GetOneMateria(materiaSeleccionadaId);
        if (materiaSeleccionada != null)
        {
            var curso = Curso_Controller.GetOneCursoByIdMateria(materiaSeleccionada.Id);

            AlumnoInscripcion alumnoInscripcion = new AlumnoInscripcion()
                {
                    IdCurso = curso.Id,
                    IdAlumno = usuarioOnline.Id,
                    Condicion = "Habilitado"
                };

            AlumnoInscripcion_Controller.CrearAlumnoInscripcion(alumnoInscripcion);

            Message = $"Te has inscripto en {materiaSeleccionada.Descripcion}.";
        }
        else
        {
            Message = $"No existe una materia con ese código.";
        }
    }

    public string Message { get; set; }
}

<style>
    .container {
        width: 60%;
        margin: 30px auto;
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    h3 {
        text-align: center;
        color: #333;
    }

    .select-box {
        width: 100%;
        padding: 10px;
        margin: 10px 0;
        border-radius: 4px;
        border: 1px solid #ccc;
        font-size: 16px;
    }

    .btn-inscribir {
        width: 100%;
        padding: 12px;
        background-color: #4CAF50;
        color: white;
        border: none;
        font-size: 16px;
        cursor: pointer;
        border-radius: 4px;
    }

    .btn-inscribir:hover {
        background-color: #45a049;
    }

    .message {
        margin-top: 20px;
        padding: 10px;
        background-color: #e7f7e7;
        color: #4CAF50;
        border-radius: 4px;
        text-align: center;
        font-size: 16px;
    }
</style>
