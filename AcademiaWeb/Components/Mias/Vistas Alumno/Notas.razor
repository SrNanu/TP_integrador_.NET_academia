@page "/Notas"
@using AcademiaWeb.Services

@using Microsoft.AspNetCore.Components.Forms
@inherits LayoutComponentBase
@rendermode InteractiveServer
@inject UsuarioContainer usuarioOnline

<h3>Notas</h3>

<div>
    @if (AlumnoInscripciones.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Curso</th>
                    <th>Materia</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var inscripcion in AlumnoInscripciones)
                {
                    var @curso = Curso_Controller.GetOneCurso(inscripcion.IdCurso);
                    var @materia = Materia_Controller.GetOneMateria(curso.IdMateria);

                    <tr>
                        <td>@curso.AnioCalendario</td>
                        <td>@materia.Descripcion</td>
                        <td>@inscripcion.Nota</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="message-container">
            <i class="fas fa-exclamation-circle"></i>
            <p>No te has inscripto en ningún curso.</p>
        </div>
    }

    <NavLink href="/MenuAlumno" class="btn btn-secondary" active-class="active" aria-label="Crear nuevo usuario" style="background-color: red">
        Volver al menú de usuario
    </NavLink>
</div>

@code {
    public AlumnoInscripcion_Controller AlumnoInscripcion_Controller = new AlumnoInscripcion_Controller();
    public List<AlumnoInscripcion> AlumnoInscripciones { get; set; } = new List<AlumnoInscripcion>();

    protected override async Task OnInitializedAsync()
    {
        AlumnoInscripciones = (await AlumnoInscripcion_Controller
            .GetAlumnosInscripcionesByIdUsuario(usuarioOnline.UsuarioContenido.Id)).ToList();
    }
}

