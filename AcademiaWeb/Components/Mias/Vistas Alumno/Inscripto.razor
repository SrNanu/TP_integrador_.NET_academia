@page "/CursosInscriptosAlumno"
@using AcademiaWeb.Services
@inject UsuarioContainer usuarioOnline

@using Microsoft.AspNetCore.Components.Forms
@inherits LayoutComponentBase
@rendermode InteractiveServer

<h3>Cursos en los que te has inscripto</h3>

<div class="cursos-list">
    @if (AlumnoInscripcionesConDetalles.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Año Curso</th>
                    <th>Descripción Curso</th>
                    <th>Docente</th>
                    <th>Nota</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var detalle in AlumnoInscripcionesConDetalles)
                {
                    foreach (var docente in detalle.Docentes)
                    {
                        <tr>
                            <td>@detalle.Curso.AnioCalendario</td>
                            <td>@detalle.Materia.Descripcion</td>
                            <td>@docente.Nombre</td>
                            <td>@detalle.Nota</td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    }
    else
    {
        <div class="message-container">
            <i class="fas fa-exclamation-circle"></i>
            <p>No te has inscripto en ningún curso.</p>
        </div>
    }

    <NavLink href="/MenuAlumno" class="btn btn-secondary" active-class="active" aria-label="Crear nuevo usuario" style="background-color: red">
        Volver al menú de usuario
    </NavLink>
</div>

@code {
    public List<DetalleInscripcion> AlumnoInscripcionesConDetalles = new List<DetalleInscripcion>();
    public AlumnoInscripcion_Controller AlumnoInscripcion_Controller = new AlumnoInscripcion_Controller();
    public DocenteCurso_Controller DocenteCurso_Controller = new DocenteCurso_Controller();
    public Usuario_Controller Usuario_Controller = new Usuario_Controller();

    protected override async Task OnInitializedAsync()
    {
        AlumnoInscripcionesConDetalles.Clear();
        var inscripciones = await AlumnoInscripcion_Controller.GetAlumnosInscripcionesByIdUsuario(usuarioOnline.UsuarioContenido.Id);

        foreach (var inscripcion in inscripciones)
        {
            var curso = Curso_Controller.GetOneCurso(inscripcion.IdCurso);
            var materia = Materia_Controller.GetOneMateria(inscripcion.IdCurso);
            var idDocentesEnCurso = await DocenteCurso_Controller.GetDocentesDC(inscripcion.IdCurso);

            var docentes = new List<Usuario>();

            foreach (var idDocenteDeCurso in idDocentesEnCurso)
            {
                docentes.AddRange(await Usuario_Controller.GetDocentes(idDocenteDeCurso.IdDocente));
            }

            AlumnoInscripcionesConDetalles.Add(new DetalleInscripcion
                {
                    Curso = curso,
                    Materia = materia,
                    Docentes = docentes,
                    Nota = inscripcion.Nota  
                });
        }
    }

    public class DetalleInscripcion
    {
        public Curso Curso { get; set; }
        public Materia Materia { get; set; }
        public List<Usuario> Docentes { get; set; }
        public int? Nota { get; set; }
    }
}

