@page "/DarBaja"

<h3>Alumnos Inscritos en el Curso</h3>

<div class="alumnos-list">
    @if (AlumnosInscriptos.Any())
    {
        <ul>
            @foreach (var alumno in AlumnosInscriptos)
            {
                <li>
                    <input type="radio" name="alumno" @bind="@alumno.Id" />  
                    <strong>@alumno.Nombre</strong> - @alumno.Curso
                </li>
            }
        </ul>

        <button class="btn-dar-baja" @onclick="DarDeBaja">Dar de Baja</button>
    }
    else
    {
        <p>No hay alumnos inscritos en el curso.</p>
    }

    @if (!string.IsNullOrEmpty(Message))
    {
        <p class="message">@Message</p>
    }
</div>

@code {
    // Lista de alumnos inscritos en el curso
    public List<Alumno> AlumnosInscriptos { get; set; } = new List<Alumno>
    {
        new Alumno { Id = 1, Nombre = "Juan Pérez", Curso = "Matemáticas" },
        new Alumno { Id = 2, Nombre = "Ana Gómez", Curso = "Física" },
        new Alumno { Id = 3, Nombre = "Carlos Díaz", Curso = "Historia" }
    };

    // Alumno seleccionado para dar de baja
    public int AlumnoSeleccionadoId { get; set; }

    // Acción para dar de baja al alumno seleccionado
    public void DarDeBaja()
    {
        var alumnoAEliminar = AlumnosInscriptos.FirstOrDefault(a => a.Id == AlumnoSeleccionadoId);
        if (alumnoAEliminar != null)
        {
            // Lógica para dar de baja al alumno (ejemplo, eliminación de base de datos)
            AlumnosInscriptos.Remove(alumnoAEliminar);
            Message = $"El alumno {alumnoAEliminar.Nombre} ha sido dado de baja.";
        }
    }

    // Mensaje de confirmación después de dar de baja al alumno
    public string Message { get; set; }

    public class Alumno
    {
        public int Id { get; set; }
        public string Nombre { get; set; }
        public string Curso { get; set; }
    }
}

