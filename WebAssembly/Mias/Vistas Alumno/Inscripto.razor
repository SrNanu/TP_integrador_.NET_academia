@page "/materias-inscriptas"

<h3>Materias en las que te has inscrito</h3>

<div class="materias-list">
    @if (MateriasInscritas.Any())
    {
        <ul>
            @foreach (var materia in MateriasInscritas)
            {
                <li>
                    <strong>@materia.Nombre</strong>
                    <span class="fecha-inscripcion">@materia.FechaInscripcion.ToString("dd/MM/yyyy")</span>
                </li>
            }
        </ul>
    }
    else
    {
        <p>No te has inscrito en ninguna materia aún.</p>
    }
</div>

@code {
    // Lista de materias en las que el alumno está inscrito
    public List<Materia> MateriasInscritas { get; set; } = new List<Materia>
    {
        new Materia { Nombre = "Matemáticas", FechaInscripcion = DateTime.Now.AddMonths(-2) },
        new Materia { Nombre = "Física", FechaInscripcion = DateTime.Now.AddMonths(-1) },
        new Materia { Nombre = "Historia", FechaInscripcion = DateTime.Now.AddMonths(-3) }
    };

    public class Materia
    {
        public string Nombre { get; set; }
        public DateTime FechaInscripcion { get; set; }
    }
}

<style>
    /* Estilos generales */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f9f9f9;
        margin: 0;
        padding: 0;
    }

    h3 {
        text-align: center;
        color: #333;
        margin-top: 20px;
    }

    /* Estilos para la lista */
    .materias-list {
        width: 60%;
        margin: 20px auto;
        background-color: white;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .materias-list ul {
        list-style-type: none;
        padding: 0;
    }

    .materias-list li {
        padding: 10px;
        border-bottom: 1px solid #ddd;
        font-size: 16px;
    }

    .materias-list li:last-child {
        border-bottom: none;
    }

    .materias-list .fecha-inscripcion {
        font-size: 14px;
        color: #888;
        margin-left: 10px;
    }

    /* Mensaje si no hay materias inscritas */
    .materias-list p {
        font-size: 16px;
        text-align: center;
        color: #f44336;
    }
</style>
